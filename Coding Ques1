package quiz2;
import java.util.Scanner;
public class Ques1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//1.    A company decided to give bonus of 5% to employee if his/her year of service is more than 5 years. 
		//a.    Ask user for their salary and year of service and print the net bonus amount.
		//b.    Take monthly salary from one employee and print the highest and the lowest salary.
		//c.    Take input of age of 3 employees and determine oldest and youngest among them.
		Scanner sc = new Scanner(System.in);	
		System.out.print("Enter your salary: RM");
		double salary=sc.nextDouble();
		System.out.print("Enter your year of service: ");
		int year=sc.nextInt();
		System.out.print("Enter your age: ");
		int age=sc.nextInt();
		
		if(year>5) {
		double bonus = salary*0.05;
			System.out.printf("Bonus is: RM%.2f%n",bonus);
		}else {
			System.out.println("NO bonus ");
		}
		System.out.print("\nEnter your salary: RM");
		double salary1=sc.nextDouble();
		
		System.out.print("Enter your year of service: ");
		int year1=sc.nextInt();
		
		System.out.print("Enter your age: ");
		int age1=sc.nextInt();
		
		if(year1>5) {
			double bonus = salary*0.05;
				System.out.printf("Bonus is: RM%.2f%n",bonus);
			}else {
				System.out.println("NO bonus");
			}
		System.out.println();

		System.out.print("Enter your salary: RM");
		double salary2=sc.nextDouble();
		
		System.out.print("Enter your year of service: ");
		int year2=sc.nextInt();
		
		System.out.print("Enter your age: ");
		int age2=sc.nextInt();
	
		if(year2>5) {
			double bonus = salary*0.05;
				System.out.printf("Bonus is: RM%.2f%n",bonus);
			}else {
				System.out.println("NO bonus");
			}
		
		System.out.println();
		if(salary>salary1&&salary>salary2) {
			System.out.printf("The largest salary is RM%.2f%n" , salary);
		}
		else if(salary1>salary2&&salary1>salary){
			System.out.printf("The largest salary is RM%.2f%n" , salary1);
		}else if(salary2>salary1&&salary2>salary){
			System.out.printf("The largest salary is RM%.2f%n" , salary2);
		}
		if(age>age1&&age>age2) {
			System.out.println("The oldest is " + age);
		}
		else if(age1>age&&age1>age2){
			System.out.println("The oldest is " + age1);
		}else if(age2>age&&age2>age1){
			System.out.println("The oldest is " + age2);
	}
		if(age<age1&&age<age2) {
			System.out.println("The youngest is " + age);
		}
		else if(age1<age&&age1<age2){
			System.out.println("The youngest is " + age1);
		}else if(age2<age&&age2<age1){
			System.out.println("The youngest is " + age2);
	}
	}
}
